doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title #{title} | Pet Haven - Home
    block scripts
      link(rel="stylesheet" href="/css/style.css")
      script(src=`https://maps.googleapis.com/maps/api/js?key=AIzaSyCIxoKH92uxe8-YmZZ4mwSiJWZbU9nBdSU&libraries=places&callback=initMap` async defer)
  body
    header
      h1 Pet Haven
    main
      block main-content
        form(id="searchForm")
          input(type="text" id="searchQuery" placeholder="Search for pet stores, veterinary clinics, etc.")
          button(type="submit") Search
        if weather
          div#weather
            h2 Current Weather
            p Temperature: #{(weather.main.temp - 273.15).toFixed(1)}Â°C
            p Weather: #{weather.weather[0].description}
            p Humidity: #{weather.main.humidity}%
            p Wind Speed: #{weather.wind.speed} m/s
        if error
          p.error #{error}
    block footer
      footer
        p &copy; 2024 Pet Haven. All rights reserved.
        nav
          a(href="/about") About Us
          span |
          a(href="/contact") Contact
          span |
          a(href="/privacy") Privacy Policy
    script(src="/js/main.js")
    script(src="/js/map.js")
